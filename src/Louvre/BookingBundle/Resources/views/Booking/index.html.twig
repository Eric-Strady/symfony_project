{% block booking_steps %}
	<div class="col-lg-12" id="step">
		<div class="col-lg-12">
			<h3>Jour de visite</h3>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="row form-group">
                {{ form_label(form.firstName, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.firstName) }}
                <div class="col-sm-10">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row form-group">
                {{ form_label(form.lastName, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.lastName) }}
                <div class="col-sm-10">
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row form-group">
                {{ form_label(form.country, "Pays", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.country) }}
                <div class="col-sm-10">
                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="row form-group">
                {{ form_label(form.birthdate, "Date d'anniversaire", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.birthdate) }}
                <div class="col-sm-10">
                    {{ form_widget(form.birthdate) }}
                </div>
            </div>

            {{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_rest(form) }}
            {{ form_end(form) }}
		</div>
		<div class="col-lg-12">
			<h3>Type de billet</h3>
		</div>
		<div class="col-lg-12">
			<h3>Nombre de billet</h3>
		</div>
		<div class="col-lg-12">
			<h3>Informations complémentaires</h3>
		</div>
		<div class="col-lg-12">
			<h3>E-mail de réservation</h3>
		</div>
		<div class="col-lg-12">
			<h3>Paiement</h3>
		</div>	
	</div>
{% endblock %}